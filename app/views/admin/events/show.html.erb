<%- model_class = Event -%>
<%- model_class_et = EventTranslation -%>
<% title t '.title', :default => model_class.model_name.human %>

<div class="form-actions">
  <%= link_to t('helpers.links.list'),
              admin_events_path, :class => 'btn'  %>
  <%= link_to t('helpers.links.edit'),
              edit_admin_event_path(@event), :class => 'btn' %>
  <%= link_to t('helpers.links.delete'),
              admin_user_path(@event),
              :method => :delete,
							:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm")) },
              :class => 'btn btn-danger' %>
	<%= link_to t('helpers.links.admin'), admin_path,
  :class => 'btn' %>
</div>

  <p><strong><%= model_class.human_attribute_name(:start_date) %>:</strong>
  <%= @event.start_datetime %></p>

  <p><strong><%= model_class.human_attribute_name(:end_date) %>:</strong>
  <%= @event.end_datetime %></p>

  <p><strong><%= model_class_et.human_attribute_name(:headline) %>:</strong>
  <%= @event.headline %></p>

  <p><strong><%= model_class_et.human_attribute_name(:story) %>:</strong>
  <%= @event.story %></p>

  <p><strong><%= model_class_et.human_attribute_name(:media) %>:</strong>
  <%= @event.media %></p>

  <p><strong><%= model_class_et.human_attribute_name(:credit) %>:</strong>
  <%= @event.credit %></p>

  <p><strong><%= model_class_et.human_attribute_name(:caption) %>:</strong>
  <%= @event.caption %></p>



