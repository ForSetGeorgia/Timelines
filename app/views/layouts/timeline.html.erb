<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? "#{yield(:title)} | #{t('app.common.app_name')}" :
				t('app.common.app_name') %></title>
    <%= csrf_meta_tags %>
	  <%= include_gon %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "fonts_#{I18n.locale}", :media => "all" %>
		<!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
	  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag '/favicon.png', :rel => 'shortcut icon' %>
  </head>
  <body id="body_timeline">

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <%= link_to(root_path(:locale => I18n.locale),:class=>"brand") do %>
            <%= image_tag "timeline-of-georgia_logo_#{I18n.locale}.png", :alt => t('app.common.app_name'), :id => "logo" %>
          <% end %>
          <% if @categories.present? %>
            <ul id="category_nav" class="nav">
              <% @categories.each do |cat| %>
                <li><%= link_to cat.name, root_path(:category => cat.permalink) %></li>
              <% end %>
            </ul>
          <% end %>

          <ul class="nav pull-right">
	          <% if user_signed_in? %>
			        <li class="dropdown">
			          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
			                <%= current_user.nickname %>
			                <b class="caret"></b>
			          </a>
			          <ul class="dropdown-menu">
             			<li>
                   <%= link_to t('.events'), admin_events_path %>
                  </li>
                  <li>
                    <%= link_to t('.categories'), admin_categories_path  %>
                  </li>
                  <% if current_user.role? User::ROLES[:admin] %>
               			<li>
                     <%= link_to t('.users'), admin_users_path %>
                    </li>
                  <% end %> 		
					        <li>
			 		         <%= link_to t('.sign_out'), destroy_user_session_path, :method => :delete %>
									</li>
			          </ul>
			        </li>
	          <% end %>
            <li id="language">
							<% I18n.available_locales.each do |locale| %>
								<% if locale != I18n.locale %>
									<%= link_to t("app.language.#{locale}"), params.merge(:locale => locale) %>
								<% end %>
							<% end %>
            </li>
            <li id="js_logo"><a href="http://jumpstart.ge" target="_blank"><img src="/assets/jumpstart_logo.png" alt="JumpStart Georgia"/></a></li>
          </ul>
          <ul id="social_links" class="nav pull-right">
            <li>
				      <a href="http://www.facebook.com/share.php?u=http://visuals.jumpstart.ge/timeline/" title="facebook" target="_blank"><img src="/assets/fb.png" alt="facebook"></a>
            </li>
            <li>
				      <a href="https://twitter.com/share?url=http://visuals.jumpstart.ge/timeline/" title="twitter" target="_blank"><img src="/assets/twitter.png" alt="twitter"></a>
            </li>
            <li>
				      <a href="https://plusone.google.com/_/+1/confirm?hl=en&url=http://visuals.jumpstart.ge/timeline/" title="google+" target="_blank"><img src="/assets/google.png" alt="google+"></a>
            </li>
          </ul>
        </div>
      </div>
    </div>

		<div id="container-content" class="container-fluid">
		  <div id="hidden_form" class="container-fluid" >
		    <form id="event_form" action="">
		      <ul class="list_float">
		        <li id="hidden_form_header" class="align_top">
    		      <h3 id="form_header"><%= t('.form.header') %></h3>
    		      <p id="form_text"><%= t('.form.text')%></p>
		        </li>
		        <li class="align_top">
    		      <ul class="list_float list_float_textarea">
    		        <li class="align_top">
    		          <label for="event">
                    <span id="lbl_event"><%= t('.form.event')%></span> 
                    <abbr id="abbr_required" title="<%= t('.form.required')%>">*</abbr></label>
    		        </li>
    		        <li class="align_top">
    		          <textarea rows="5" cols="50" id="event" name="event"></textarea>
    		        </li>
    		      </ul>
		        </li>
		        <li>
              <ul>
    		        <li>
        		      <ul class="list_float list_float_fields">
        		        <li>
        		          <label id="lbl_date" for="date"><%= t('.form.date')%></label>
        		        </li>
        		        <li class="align_top">
        		          <input type="date" name="date" id="data">
        		        </li>
        		      </ul>
    		        </li>
    		        <li>
        		      <ul class="list_float list_float_fields">
        		        <li>
        		          <label id="lbl_link" for="link"><%= t('.form.link')%></label>
        		        </li>
        		        <li class="align_top">
        		          <input type="text" name="link" id="link">
        		        </li>
        		      </ul>
    		        </li>
    		        <li>
        		      <ul class="list_float list_float_fields">
        		        <li>
        		          <label id="lbl_name" for="name"><%= t('.form.name')%></label>
        		        </li>
        		        <li class="align_top">
        		          <input type="text" name="name" id="name">
        		        </li>
        		      </ul>
    		        </li>
    		        <li>
        		      <ul class="list_float list_float_fields">
        		        <li>
        		          <label for="email" id="lbl_email"><%= t('.form.email')%></label>
        		        </li>
        		        <li class="align_top">
        		          <input type="email" name="email" id="email">
        		        </li>
        		      </ul>
    		        </li>
              </ul>
		        </li>
		        <li>
              <%= image_tag "submit_#{I18n.locale}.png", :alt => t('.form.submit'), :id => "btn_submit"  %>
		        </li>
		        <li class="align_top">
		          <div id="loading">
                <%= image_tag "ajax-loader.gif" %>
		          </div>
		          <div id="success_submit">
      		      <%= t('.form.success') %>
		          </div>
		          <div id="error_submit">
      		      <%= t('.form.error') %>
		          </div>
		          <div id="required_submit">
      		      <%= t('.form.req_submit') %>
		          </div>
		        </li>
          </ul>
	      </form>
		  </div>

      <%= yield %>
    </div> <!-- /container -->


    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>
		<script type="text/javascript">
			I18n.defaultLocale = "<%= I18n.default_locale %>";
			I18n.locale = "<%= I18n.locale %>";
		</script>

		<% if Rails.env.production? %>
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-12801815-13']);
        _gaq.push(['_trackPageview']);
        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
		<% elsif Rails.env.staging? %>
			<!-- insert google analytics for staging site here -->
		<% end %>

  </body>
</html>
